<p id="notice"><%= notice %></p>

<%= form_tag new_article_path, method: 'get', class: 'form-inline' do %>
  <div class='form-group'>
    <%= label_tag 'URL' %>
    <%= text_field_tag :search, params[:movie_url], class: 'form-control', placeholder: 'Guardian URL' %>
    <%= submit_tag 'Scrape it', class: 'btn btn-default' %> 

    or for manual entry:
    <%= link_to "Create new Article", new_article_path, class: 'btn btn-default' %>
  </div>
<% end %>

<h1>Listing Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Image url</th>
      <th>Published date</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.image_url %></td>
        <td><%= article.published_date %></td>
        <td><%= article.subtitle %></td>
        <td><%= article.body %></td>
        <td><%= article.category %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
