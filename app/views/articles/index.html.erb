<% unless notice.nil? %>
  <div class="container alert alert-info">
    <a href="#" class="close" data-dismiss="alert">&times;</a><%= notice %>
  </div>
<% end %>

<%= render 'scrape_form'%>

<div class="all_aricles"></div>
  <h1>Listing Articles</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Author</th>
        <th>Published date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td class="thumbnail"><%= image_tag article.image_url %></td>
          <td><%= article.title %></td>
          <td><%= article.subtitle %></td>
          <td><%= article.author %></td>
          <td><%= article.published_date.strftime("%d/%m/%Y") %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article), 'data-no-turbolink': true %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
