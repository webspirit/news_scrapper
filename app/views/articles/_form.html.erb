<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= image_tag @article.image_url %>
    <%= f.input :image_url %>
    <%= f.input :published_date %>
    <%= f.input :subtitle, as: :text, input_html: { rows: 2 } %>
    <%= f.input :body, as: :text, input_html: { rows: 10 } %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-success' %>
  </div>
<% end %>
