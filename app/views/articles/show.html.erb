<% unless notice.nil? %>
  <div class="container alert alert-info">
    <a href="#" class="close" data-dismiss="alert">&times;</a><%= notice %>
  </div>
<% end %>

<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-lg btn-primary article_buttons', 'data-no-turbolink': true %>
<%= link_to 'Back to All Articles', articles_path, class: 'btn btn-lg btn-default article_buttons' %>

<p>
  <strong>Image url:</strong>
  <%= link_to image_tag(@article.image_url), @article.image_url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>

<p>
  <strong>Published date:</strong>
  <%= @article.published_date.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @article.subtitle %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category %>
</p>
