#homepage::after {
  content: "";
  background: url(<%= asset_path 'pre_login_background.jpg' %>) no-repeat top center fixed;
  background-size: cover;
  opacity: 1.5;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;   
}

#homepage {
  h1 {
    font-size: 46px;
    color: white;
  }

  h3, h5 {
    color: #e5e5e5;
  }

  .homepage-btn { margin: 20px 10px; }
}
